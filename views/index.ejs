<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'WeatherApp' %></title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-…"
    crossorigin="anonymous"
  >
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
  />
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/navbar') %>

  <main class="container-fluid px-2 my-4">
    <div class="d-flex flex-wrap layout-row">
      <!-- Left article -->
      <aside class="sidebar">
        <% if (newsArticles[0]) { const a = newsArticles[0]; %>
          <div class="card mb-3" style="background:#1e1e1e; border:none;">
            <img src="<%= a.urlToImage %>" class="card-img-top" alt="<%= a.title %>">
            <div class="card-body p-2">
              <h6 class="card-title text-light"><%= a.title %></h6>
              <a href="<%= a.url %>" target="_blank" class="stretched-link"></a>
            </div>
          </div>
        <% } %>
      </aside>

      <!-- Main weather content -->
      <section class="main-content">
        <form class="search-form mb-4" action="/" method="get">
          <input
            type="text"
            name="location"
            value="<%= location %>"
            class="form-control mb-2"
            placeholder="City or City,State"
            required
          />
          <button class="btn btn-primary w-100" type="submit">Get Weather</button>
        </form>

        <h2 class="text-center text-light mb-4"><%= title %></h2>

        <% if (error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } else if (current) { %>
          <div class="card">
            <div class="card-body">
              <p><strong>Temp:</strong> <%= current.temp %> °F</p>
              <p><strong>Feels like:</strong> <%= current.feels_like %> °F</p>
              <p><strong>Conditions:</strong> <%= current.description %></p>
              <img
                src="http://openweathermap.org/img/wn/<%= current.icon %>@2x.png"
                alt="<%= current.description %>"
              />
            </div>
          </div>

          <% if (hourly && hourly.length) { %>
            <h3 class="mt-5 text-light">Next 24-Hour Forecast</h3>
            <div class="d-flex overflow-auto py-2">
              <% hourly.forEach(h => { %>
                <div class="card text-center me-3" style="min-width:100px; background:#1e1e1e; border:none;">
                  <div class="card-body p-2">
                    <small class="text-light">
                      <%= new Date(h.time).toLocaleTimeString('en-US', {
                        hour: 'numeric',
                        minute: 'numeric',
                        hour12: true,
                        timeZone: 'America/New_York'
                      }) %>
                    </small>
                    <img
                      src="http://openweathermap.org/img/wn/<%= h.icon %>@2x.png"
                      alt=""
                      style="width:50px; height:50px;"
                    />
                    <div class="fw-bold text-light"><%= h.temp %>°F</div>
                  </div>
                </div>
              <% }); %>
            </div>
          <% } %>
        <% } %>
      </section>

      <!-- Right article -->
      <aside class="sidebar">
        <% if (newsArticles[1]) { const a = newsArticles[1]; %>
          <div class="card mb-3" style="background:#1e1e1e; border:none;">
            <img src="<%= a.urlToImage %>" class="card-img-top" alt="<%= a.title %>">
            <div class="card-body p-2">
              <h6 class="card-title text-light"><%= a.title %></h6>
              <a href="<%= a.url %>" target="_blank" class="stretched-link"></a>
            </div>
          </div>
        <% } %>
      </aside>
    </div>
  </main>

  <%- include('partials/footer') %>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-…"
    crossorigin="anonymous"
  ></script>
</body>
</html>
